{
  "name": "@jrayback/simple-cesr",
  "type": "module",
  "version": "0.1.5",
  "description": "A simple, limited, true-to-spec implementation of the CESR protocol.",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npx rimraf ./dist && npx swc src index.ts -d dist --ignore **/*.test.ts --ignore **/main.ts",
    "start": "npx tsx src/main.ts",
    "test": "jest ./src/api ./src/implementation",
    "standards-test": "jest ./testing/standards",
    "all-tests": "jest",
    "formatter": "npx ts-standard --fix",
    "emitter" : "tsc -p tsconfig-emit.json --emitDeclarationOnly --declaration --outDir dist",
    "full-build": "npm run all-tests && npm run formatter && npm run build && npm run emitter"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/futureforging/simple-cesr.git"
  },
  "keywords": [
    "KERI",
    "CESR"
  ],
  "author": "Jonathan Rayback",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/futureforging/simple-cesr/issues"
  },
  "homepage": "https://github.com/futureforging/simple-cesr#readme",
  "devDependencies": {
    "@swc/cli": "^0.3.10",
    "@swc/core": "^1.4.11",
    "@swc/jest": "^0.2.36",
    "@tsconfig/node18": "^18.2.4",
    "@types/jest": "^29.5.5",
    "jest": "^29.7.0",
    "jest-ci-spec-reporter": "^1.0.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-standard": "^12.0.2",
    "tsx": "^4.7.1",
    "typescript": "^5.2.2"
  },
  "ts-standard": {
    "ignore": [
      "dist"
    ]
  },
  "dependencies": {
    "buffer": "^6.0.3",
    "ts-pattern": "^5.0.6"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
